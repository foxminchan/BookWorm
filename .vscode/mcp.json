{
  "inputs": [
    {
      "id": "context7-api-key",
      "type": "promptString",
      "password": true,
      "description": "Enter your Context7 API Key"
    }
  ],
  "servers": {
    "sequential-thinking": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "memory": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    },
    "context7": {
      "type": "stdio",
      "command": "bunx",
      "args": [
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "${input:context7-api-key}"
      ]
    },
    "aspire": {
      "type": "stdio",
      "command": "aspire",
      "args": ["mcp", "start"]
    },
    "playwright": {
      "type": "stdio",
      "command": "bunx",
      "args": ["-y", "@playwright/mcp@latest"]
    }
  }
}
