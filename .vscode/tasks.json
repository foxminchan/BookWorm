{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Restore projects",
      "command": "dotnet",
      "type": "process",
      "args": [
        "restore",
        "${workspaceFolder}/BookWorm.slnx",
        "/property:GenerateFullPaths=true"
      ],
      "problemMatcher": "$msCompile",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start Aspire",
      "command": "dotnet",
      "type": "process",
      "args": ["aspire", "run"],
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
