<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <InterceptorsNamespaces>$(InterceptorsNamespaces);Microsoft.AspNetCore.OpenApi.Generated</InterceptorsNamespaces>
    <SuppressCheckGrpcNetClientFactoryVersion>true</SuppressCheckGrpcNetClientFactoryVersion>
  </PropertyGroup>
  <ItemGroup Label="OCI Labels">
    <ContainerLabel
      Include="org.opencontainers.image.description"
      Value="BookWorm MCP Tools Image"
    />
    <ContainerLabel Include="org.opencontainers.image.authors" Value="Nhan Nguyen" />
    <ContainerLabel
      Include="io.modelcontextprotocol.server.name"
      Value="ghcr.io/foxminchan/bookworm/mcptools"
    />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="ModelContextProtocol.AspNetCore" />
    <ProjectReference Include="..\..\Aspire\BookWorm.ServiceDefaults\BookWorm.ServiceDefaults.csproj" />
  </ItemGroup>
</Project>
