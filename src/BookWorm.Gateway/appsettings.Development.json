{
  "BFF": {
    "ClientId": "bff",
    "ClientSecret": "secret",
    "Scopes": [
      "openid",
      "profile",
      "offline_access",
      "catalog",
      "ordering",
      "basket",
      "rating"
    ],
    "Apis": [
      {
        "LocalPath": "/api",
        "RequiredToken": "User"
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "basketservice": {
        "ClusterId": "basketservice",
        "RateLimiterPolicy": "bucket-by-user",
        "Match": {
          "Path": "/api/v1/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/v1"
          },
          {
            "PathPrefix": "/"
          },
          {
            "RequestHeaderOriginalHost": "true"
          }
        ],
        "Metadata": {
          "Duende.Bff.Yarp.TokenType": "User",
          "Duende.Bff.Yarp.AntiforgeryCheck": "true"
        }
      },
      "catalogservice": {
        "ClusterId": "catalogservice",
        "RateLimiterPolicy": "fixed-by-ip",
        "Match": {
          "Path": "/api/v1/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/v1"
          },
          {
            "PathPrefix": "/"
          },
          {
            "RequestHeaderOriginalHost": "true"
          }
        ],
        "Metadata": {
          "Duende.Bff.Yarp.TokenType": "User",
          "Duende.Bff.Yarp.AntiforgeryCheck": "true"
        }
      },
      "orderingservice": {
        "ClusterId": "orderingservice",
        "RateLimiterPolicy": "bucket-by-user",
        "Match": {
          "Path": "/api/v1/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/v1"
          },
          {
            "PathPrefix": "/"
          },
          {
            "RequestHeaderOriginalHost": "true"
          }
        ],
        "Metadata": {
          "Duende.Bff.Yarp.TokenType": "User",
          "Duende.Bff.Yarp.AntiforgeryCheck": "true"
        }
      },
      "ratingservice": {
        "ClusterId": "ratingservice",
        "RateLimiterPolicy": "bucket-by-user",
        "Match": {
          "Path": "/api/v1/{**remainder}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api/v1"
          },
          {
            "PathPrefix": "/"
          },
          {
            "RequestHeaderOriginalHost": "true"
          }
        ],
        "Metadata": {
          "Duende.Bff.Yarp.TokenType": "User",
          "Duende.Bff.Yarp.AntiforgeryCheck": "true"
        }
      }
    },
    "Clusters": {
      "basketservice": {
        "Destinations": {
          "base_destination": {
            "Address": "https://basket-api"
          }
        }
      },
      "catalogservice": {
        "Destinations": {
          "base_destination": {
            "Address": "https://catalog-api"
          }
        }
      },
      "orderingservice": {
        "Destinations": {
          "base_destination": {
            "Address": "https://ordering-api"
          }
        }
      },
      "ratingservice": {
        "Destinations": {
          "base_destination": {
            "Address": "https://rating-api"
          }
        }
      }
    }
  }
}