    "turbo": "^2.8.8",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.29.2",
  "engines": {
    "node": ">=25.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
