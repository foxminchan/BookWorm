  "licenses": [
    {
      "type": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxminchan/BookWorm.git",
    "directory": "src/Clients"
  },
  "bugs": {
    "url": "https://github.com/foxminchan/BookWorm/issues"
  },
  "homepage": "https://foxminchan.github.io/BookWorm/",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "e2e": "turbo run test:e2e",
    "boundaries": "turbo boundaries",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.8.1",
