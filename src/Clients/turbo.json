{
  "$schema": "https://turborepo.dev/schema.v2.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_GATEWAY_HTTPS",
    "NEXT_PUBLIC_GATEWAY_HTTP",
    "NEXT_PUBLIC_COPILOT_ENABLED",
    "NEXT_PUBLIC_COPILOT_AGENT_NAME",
    "NEXT_PUBLIC_MAX_RETRIES",
    "KEYCLOAK_URL",
    "KEYCLOAK_REALM",
    "KEYCLOAK_CLIENT_ID",
    "BETTER_AUTH_SECRET",
    "SKIP_ENV_VALIDATION",
    "NEXT_RUNTIME",
    "OTEL_EXPORTER_OTLP_ENDPOINT",
    "OTEL_EXPORTER_OTLP_HEADERS"
  ],
  "boundaries": {
    "tags": {
      "config": {
        "dependencies": {
          "deny": ["app", "domain", "foundation"]
        }
      },
      "foundation": {
        "dependencies": {
          "deny": ["app", "domain"]
        }
      },
      "domain": {
        "dependencies": {
          "deny": ["app"]
        }
      }
    }
  },
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "check-types": {
      "dependsOn": ["transit"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}",
        "vitest.config.ts",
        "**/__tests__/**"
      ],
      "passThroughEnv": ["FAKER_SEED", "MSW_COOKIE_STORE_PATH"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": [
        "**/*.{ts,tsx}",
        "**/*.test.{ts,tsx}",
        "vitest.config.ts",
        "**/__tests__/**"
      ],
      "passThroughEnv": ["FAKER_SEED", "MSW_COOKIE_STORE_PATH"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["playwright-report/**", "test-results/**", "e2e/reports/**"],
      "inputs": ["e2e/**", "playwright.config.ts"],
      "passThroughEnv": [
        "PLAYWRIGHT_*",
        "BASE_URL",
        "HEADLESS",
        "CI",
        "SLOW_MO",
        "VIDEO",
        "TEST_ADMIN_EMAIL",
        "TEST_ADMIN_PASSWORD"
      ]
    },
    "test:e2e:headed": {
      "dependsOn": ["^build"],
      "cache": false,
      "passThroughEnv": [
        "PLAYWRIGHT_*",
        "BASE_URL",
        "HEADLESS",
        "SLOW_MO",
        "VIDEO",
        "TEST_ADMIN_EMAIL",
        "TEST_ADMIN_PASSWORD"
      ]
    },
    "test:e2e:ci": {
      "dependsOn": ["^build"],
      "outputs": ["playwright-report/**", "test-results/**", "e2e/reports/**"],
      "inputs": ["e2e/**", "playwright.config.ts"],
      "passThroughEnv": [
        "PLAYWRIGHT_*",
        "BASE_URL",
        "CI",
        "SLOW_MO",
        "VIDEO",
        "TEST_ADMIN_EMAIL",
        "TEST_ADMIN_PASSWORD"
      ]
    },
    "playwright:install": {
      "cache": false,
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
