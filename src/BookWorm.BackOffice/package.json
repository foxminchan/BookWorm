{
  "name": "book-worm-back-office",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "safetest": "cross-env OPT_URL=${OPT_URL:-http://localhost:3000/next-app/} vitest --config vite.safetest.config.mts",
    "safetest:jest": "cross-env OPT_URL=${OPT_URL:-http://localhost:3000/next-app/} jest --runInBand --testMatch '**/*.safetest.{j,t}s{,x}' --setupFilesAfterEnv ./setup-safetest.ts",
    "safetest:ci:test": "rm -f artifacts.json && OPT_URL=https://safetest-two.vercel.app/next-app/ OPT_CI=1 OPT_DOCKER=1 OPT_ARTIFACTS=artifacts.json bun run safetest -- --run --bail=5",
    "safetest:ci": "(bun run safetest:ci:test || true)",
    "test": "jest",
    "ca": "dotnet dev-certs https --trust --format pem -ep ./certificates/certificate.crt",
    "format:write": "bun prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "bun prettier --check \"**/*.{ts,tsx,mdx}\" --cache"
  },
  "dependencies": {
    "next": "^15.0.0-rc.0",
    "react": "^19.0.0-rc-fb9a90fa48-20240614",
    "react-dom": "^19.0.0-rc-fb9a90fa48-20240614",
    "safetest": "^0.1.13"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.0.0-rc.0",
    "jest": "^29.7.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.3"
  }
}
