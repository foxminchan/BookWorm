{
  "name": "k6-performance-tests",
  "version": "1.0.0",
  "description": "BookWorm K6 Performance Testing Suite with TypeScript support",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "deploy": "bun run build && echo 'TypeScript build completed successfully'",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint": "prettier --check \"src/**/*.{ts,js,json}\"",
    "precommit": "bun run format && bun run build"
  },
  "author": "Nhan Nguyen",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@babel/core": "^7.27.3",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.26.0",
    "@types/k6": "^1.0.2",
    "babel-loader": "^10.0.0",
    "core-js": "^3.42.0",
    "prettier": "^3.4.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.3",
    "webpack": "^5.100.1",
    "webpack-cli": "^6.0.1"
  }
}
