{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": false,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "*.json",
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": [
        "**/login/pages/*.tsx",
        "**/account/pages/*.tsx",
        "**/login/Template.tsx",
        "**/account/Template.tsx",
        "**/login/UserProfileFormFields.tsx",
        "KcApp.tsx"
      ],
      "options": {
        "printWidth": 80
      }
    }
  ]
}
