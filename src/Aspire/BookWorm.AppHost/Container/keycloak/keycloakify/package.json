{
  "name": "@bookworm/keycloakify",
  "version": "1.0.0",
  "description": "Keycloakify-based authentication UI theme for BookWorm's identity and access management",
  "author": "Nhan Nguyen <nguyenxuannhan407@gmail.com> (https://github.com/foxminchan)",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxminchan/BookWorm.git",
    "directory": "src/Aspire/BookWorm.AppHost/Container/keycloak/keycloakify"
  },
  "bugs": {
    "url": "https://github.com/foxminchan/BookWorm/issues"
  },
  "homepage": "https://github.com/foxminchan/BookWorm#readme",
  "type": "module",
  "scripts": {
    "prepare": "allow-scripts",
    "postinstall": "keycloakify sync-extensions",
    "dev": "vite",
    "build": "tsc && vite build",
    "build-keycloak-theme": "bun run build && keycloakify build",
    "storybook": "storybook dev -p 6006",
    "format": "prettier --write .",
    "check": "eslint . && prettier --check .",
    "lint": "eslint --fix .",
    "ci": "eslint . && prettier --check ."
  },
  "lavamoat": {
    "allowScripts": {
      "keycloakify": true,
      "$root$": false,
      "vite>esbuild": false
    }
  },
  "dependencies": {
    "keycloakify": "^11.15.1",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^3.4.19",
    "@keycloakify/email-native": "~260007.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@lavamoat/allow-scripts": "^3.4.3",
    "@storybook/react-vite": "^10.2.10",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "storybook": "^10.2.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  }
}
