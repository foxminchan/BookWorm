{
  "name": "@bookworm/keycloakify",
  "version": "1.0.0",
  "description": "Keycloakify-based authentication UI theme for BookWorm's identity and access management",
  "author": "Nhan Nguyen <nguyenxuannhan407@gmail.com> (https://github.com/foxminchan)",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/foxminchan/BookWorm.git",
    "directory": "src/Aspire/BookWorm.AppHost/Container/keycloak/keycloakify"
  },
  "bugs": {
    "url": "https://github.com/foxminchan/BookWorm/issues"
  },
  "homepage": "https://github.com/foxminchan/BookWorm#readme",
  "type": "module",
  "scripts": {
    "postinstall": "keycloakify sync-extensions",
    "dev": "vite",
    "build": "tsc && vite build",
    "build-keycloak-theme": "pnpm run build && keycloakify build",
    "storybook": "storybook dev -p 6006",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "type-check": "tsc --noEmit",
    "ci": "pnpm run format:check && pnpm run lint:check && pnpm run type-check"
  },
  "dependencies": {
    "keycloakify": "^11.14.2",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^3.4.19",
    "@keycloakify/email-native": "~260007.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@storybook/react": "^10.2.3",
    "@storybook/react-vite": "^10.2.3",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.2.0",
    "prettier": "^3.8.1",
    "storybook": "^10.2.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  }
}
