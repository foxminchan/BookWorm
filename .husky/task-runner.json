{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "scan",
      "command": "gitleaks",
      "args": ["detect", "--source", ".", "--exit-code", "1"]
    },
    {
      "name": "format",
      "command": "dotnet",
      "args": ["csharpier", ".", "--check"]
    },
    {
      "name": "style",
      "command": "dotnet",
      "args": ["format", "style", ".", "--verify-no-changes"]
    },
    {
      "name": "analyzers",
      "command": "dotnet",
      "args": ["format", "analyzers", ".", "--verify-no-changes"]
    }
  ]
}
